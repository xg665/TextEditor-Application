<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/welcomesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alexbrushregular"
        android:text="@string/writting"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="60dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@id/welcomesign"
        app:layout_constraintStart_toStartOf="@id/welcomesign"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"

        />
    <View
        android:id="@+id/delimiter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toBottomOf="@id/welcomesign"
        android:background="@color/cardview_shadow_start_color"/>
    <EditText
        android:id="@+id/edittextsmall"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/welcomesign"

        />

    <EditText
        android:id="@+id/edittextmedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/edittextsmall"

        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edittextlarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@id/edittextmedium"

        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/savebtn"
        android:layout_width="59dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="@id/welcomesign"
        app:layout_constraintTop_toTopOf="@id/welcomesign"
        app:srcCompat="@mipmap/ic_launcher" />

</android.support.constraint.ConstraintLayout>